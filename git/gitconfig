[alias]
    a = add
    ap = add --patch

    b = branch
    ba = branch --all

    c = commit
    ca = commit --amend

    d = diff
    ds = diff --staged
    
    l = log
    lo = log --oneline

    st = status --branch

    s = switch
    sc = switch -c

    branch-list-merged = "!git branch --merged develop | grep -v -E '(develop|origin|master)'"
    branch-delete-merged = "!git branch-list-merged | xargs git branch -d"

    unstage = reset HEAD
    undo-commit = reset --soft HEAD^
    set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`

[color]
    ui = auto
[core]
    editor = nvim
    excludesfile = ~/.gitignore_global
[include]
    path = ~/.gitconfig_local
[push]
    default = current
[merge]
    conflictstyle = diff3
[init]
    defaultBranch = main
[user]
	email = gardgeoff@gmail.com
	name = Geoff Gard
